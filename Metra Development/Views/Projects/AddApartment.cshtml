@model Metra_Development.Models.ApartmentCustom

@{
    ViewBag.Title = "AddApartment";
    Layout = "~/Views/Shared/AdminPanelLayout.cshtml";
}

<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="~/Content/NewsStyle.css" rel="stylesheet" />


<form class="w3-container" action="/Projects/AddApartment" method="post" enctype="multipart/form-data">
    <div style="margin-top:50px;">
        <div class="w3-card-4">
            <div class="w3-container w3-brown">
                <h2 class="text-center">ბინის დამატება</h2>
            </div>
                <p>
                <label class="w3-text-brown" style="margin-left:7px;"><b>სართული</b></label>
                <div class="form-group">
                    @Html.DropDownList("FloorID", new SelectList(ViewBag.getFloorlist, "ID", "FloodIDHouseIDProjectName"), new { @class = "form-control" })
                </div>
                </p>
                <p>
                <label class="w3-text-brown" style="margin-left:7px;"><b>ფართი</b></label>
                <div class="form-group">
                    <input type="number" class="form-control w3-input w3-border w3-sand" name="Area" placeholder="ბინის ფართი" />
                </div>
                </p>
                <p>
                <label class="w3-text-brown" style="margin-left:7px;"><b>საძინებელი</b></label>
                <div class="form-group">
                    <input type="number" class="form-control w3-input w3-border w3-sand" name="Bedroom" placeholder="საძინებლის რაოდენობა" />
                </div>
                </p>
                <p>
                <label class="w3-text-brown" style="margin-left:7px;"><b>სველი წერტილი</b></label>
                <div class="form-group">
                    <input type="number" class="form-control w3-input w3-border w3-sand" name="Washroom" placeholder="სველი წერტილის რაოდენობა" />
                </div>
                </p>
                <p>
                <label class="w3-text-brown" style="margin-left:7px;"><b>ბინის ფასი</b></label>
                <div class="form-group">
                    <input type="number" class="form-control w3-input w3-border w3-sand" name="Price" placeholder="ფასი" />
                </div>
                 </p>
                <div class="form-group">
                    <input type="file" class="form-control" name="Photo" />
                </div>
                 <p>
                <div class="form-group">
                    <button class="w3-btn w3-green" type="submit">ბინის დამატება</button>
                </div>
                 </p>
            </div>
            <a style="margin-top:45px;" href="/Projects/Index"><i class="glyphicon glyphicon-arrow-left" style="color:green; margin-top:24px; font-size:42px;"></i></a>
            <div class="form-group" style="font-size: 18px; color: red;">
                @ViewBag.Error
            </div>
        </div>

</form>
