@model   Metra_Development.Models.Projects

@{
    ViewBag.Title = "AddHouse";
    Layout = "~/Views/Shared/AdminPanelLayout.cshtml";
}

<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="~/Content/NewsStyle.css" rel="stylesheet" />
<form class="w3-container" action="/Projects/AddHouse" method="post" enctype="multipart/form-data">
    
        <div style="margin-top:50px;">
            <div class="w3-card-4">
                <div class="w3-container w3-brown">
                    <h2 class="text-center">კორპუსის დამატება</h2>
                </div>
                <p>
                    <label class="w3-text-brown" style="margin-left:7px;"><b>პროექტი</b></label>
                    <div class="form-group">
                        @Html.DropDownList("ProjectID", new SelectList(ViewBag.getProjectlist, "ID", "Name"), new { @class = "form-control" })
                    </div>
                </p>
                <p>
                    <label class="w3-text-brown" style="margin-left:7px;"><b>სახლის ნომერი</b></label>
                    <div class="form-group ">
                        <input type="number" class="w3-input w3-border w3-sand" name="HouseNumber" placeholder="სახლის ნომერი" />
                    </div>
                </p>
                <p>
                    <button class="w3-btn w3-green" type="submit"> სახლის დამატება </button>
                </p>
            </div>
                <a style="margin-top:55px;" href="/Projects/Index"><i class="glyphicon glyphicon-arrow-left" style="color:green; margin-top:24px; font-size:42px;"></i></a>
                <div class="form-group" style="font-size: 18px; color: red;">
                    @ViewBag.Error
                </div>
            
        </div>
</form>
